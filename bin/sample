case "$1" in
   -i|--items)
      items=$2
   ;;
   "")
      items=10
   ;;
   -h|--help|*)
      echo "Usage: sample [OPTION]..."
      echo ""
      echo "Print K lines to standard output using resevoir sampling."
      echo ""
      echo "OPTIONS"
      echo ""
      echo "   -h, --help   show this help"
      echo "   -i, --items  number of items to sample"
      echo ""
      echo "EXAMPLES"
      echo ""
      echo "   cat records | sample -i 1000"
      exit 1
   ;;
esac

awk '
   BEGIN {
      srand()
   }
   {
      if (NR <= '$items') {
         items[NR] = $0
         size++
      } else {
         j = int(NR * rand()) + 1
         if (j <= '$items') {
            items[j] = $0
         }
      }
   }
   END {
      for (i = 1; i <= size; i++) {
         print items[i]
      }
   }
'
